@model GreenStore.Models.Catagorie

@{
    ViewBag.Title = "Tìm sản phẩm";
}

<div class="genre">
    <h3><em>@Model.Name</em> Items</h3>

    <ul id="item-list">
        @foreach (var item in Model.Items)
        {
            <li>
                <a href="@Url.Action("Chi tiết sản phẩm", new { id = item.ID })">
                    <img alt="@item.Name" src="@item.ItemPictureUrl" />
                    <span>@item.Name</span>
                </a>
            </li>
        }
    </ul>
</div>

